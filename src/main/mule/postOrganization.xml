<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="postOrganizationSubFlow" doc:id="205dc049-e442-45ee-be23-2d5765fec93d" >
		<logger level="INFO" doc:name="info: flowStartLogger" doc:id="d98718a6-e4da-48ce-bba0-467fc2e648cd" message="postOrganizationSubFlow started"/>
		<ee:transform doc:name="Transform Message" doc:id="4382c737-1927-4c64-9964-14cdb1b46867" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
    "name" : payload.organizations.orgName,
    "sfdcId" : payload.organizations.orgId,
    "acctStatus" : if (payload.organizations.status ==1) "Active" else "Inactive",
    "timeZone" : payload.organizations.timeZone,
    "address1" : payload.organizations.primaryAddress1,
    "address2" : payload.organizations.primaryAddress2,
    "address3" : payload.organizations.primaryAddress3,
    "city" : payload.organizations.city,
    "state" : payload.organizations.state,
    "postalCode" : payload.organizations.postalCode,
    "country" : payload.organizations.country,
    "activeContracts" : (if(payload.organizations.activeContracts == "Y") true else false) as Boolean default true
  }]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<http:request method="POST" doc:name="Request to SA1001 post organization" doc:id="24d868d8-aed1-4ca7-9b8b-2d6e7100e78b" path="/organizations" config-ref="sa1001HttpRequestConfiguration" responseTimeout="300000">
			<http:headers ><![CDATA[#[output application/java
---
{
	"client_name":"abc",
	"client_secret":"abc",
	"transactionId":vars.transactionId
}]]]></http:headers>
		</http:request>
		<logger level="INFO" doc:name="info: flowEndLogger" doc:id="2582920e-449f-42b1-89c5-abdb5456de42" message="postOrganizationSubFlow Ended"/>
	</sub-flow>
</mule>
